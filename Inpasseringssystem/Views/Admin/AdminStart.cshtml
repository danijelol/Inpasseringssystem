@model Inpasseringssystem.Models.Guest

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/större.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>

    <script>
        $(function () {
            $("#datepickerFrom").datepicker({
                changeMonth: true,
                changeYear: true
            });

            $("#datepickerTo").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    </script>

</head>
<body>



    <div class="container">
        <div class="row" style="height:292px; text-align: center"><font size="38"><br /><br />Besökslogg</font></div>


        @using (Html.BeginForm("WhoToSee", "Inpassering"))
        {


            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center" style="text-align: center">
                    <h1>Ange datum</h1>

                    <div class="col-md-12 text-left">
                        <h1>Från</h1>
                        <p><input type="text" id="datepickerFrom" class="form-control input-lg"></p>
                        <br />
                        <div class="bg-danger" style="font-size:24px">@ViewBag.ErrorName</div>
                    </div>
                    <div class="col-md-12 text-left">
                        <h1>Till</h1>
                        <p><input type="text" id="datepickerTo" class="form-control input-lg"></p>
                        <br />
                        <div class="bg-danger" style="font-size:24px">@ViewBag.ErrorName</div>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center" style="text-align: center">
                    <br />
                    <div class="col-md-12 text-left">

                        <br />
                        <div class="bg-danger" style="font-size:24px">@ViewBag.ErrorSurname</div>
                        <br />
                        <br />
                        <input type="submit" class="btn btn-block btn-success btn-xlarge" style="font-size: 24px;" value="OK">
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>

        }


    </div>
</body>
</html>