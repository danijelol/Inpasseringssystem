@model Inpasseringssystem.Models.Guest

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/större.css" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>

    <div class="container">
        <div class="row" style="height:292px; text-align: center"><font size="38"><br /><br />Admin Login</font></div>


        @using (Html.BeginForm("AdminStart", "Admin"))
        {


            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <br />

                    <div class="col-md-12">
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <br />
                    <div class="col-md-12">
                        <h1>Lösenord</h1>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", @style = "font-size: 27px"})

                        <br />
                        <div class="bg-danger" style="font-size:24px">@ViewBag.Error</div>
                        <br />
                        <button type="submit" class="btn btn-block btn-success btn-xlarge"><span class=" glyphicon glyphicon-log-in pull-left "></span>Logga in</button>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>

        }


    </div>
</body>
</html>