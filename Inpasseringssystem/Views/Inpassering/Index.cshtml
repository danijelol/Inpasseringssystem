@model Inpasseringssystem.Models.Guest

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/större.css" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>

    <div class="container">
        <div class="row" style="height:292px; text-align: center; margin-top: 80px;"><font size="38"><br /><br />Hej! Vad heter du?</font></div>


        @using (Html.BeginForm("WhoToSee", "Inpassering"))
        {


            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center" style="text-align: center">

                    <div class="col-md-12 text-left">
                        <h1>Förnamn</h1>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-lg", @style = "font-size: 27px" })
                        <br />
                        <div class="bg-danger" style="font-size:24px">@ViewBag.ErrorName</div>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center" style="text-align: center">
                    <br />
                    <div class="col-md-12 text-left">
                        <h1>Efternamn</h1>
                        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control input-lg", @style = "font-size: 27px" })
                        <br />
                        <div class="bg-danger" style="font-size:24px">@ViewBag.ErrorSurname</div>
                        <br />
                        <br />
                        <input type="submit" class="btn btn-block btn-success btn-xlarge" style="font-size: 24px;" value="OK">
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>

        }


    </div>

    <button class="btn btn-block btn-lg btn-default" onclick="goBack()" style="width:180px; height:50px; position: absolute;left:10px;bottom:10px;">
        <span class=" glyphicon glyphicon-backward pull-left "></span>Tillbaka
    </button>
</body>
</html>